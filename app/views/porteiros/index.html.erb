<main class="ls-main ">
  <div class="container-fluid">
  <h1 class="ls-title-intro ls-ico-search">Buscar Porteiro</h1>
  <div class="container-fluid">
    <form  action="" class="ls-form ls-form-inline">
      <fieldset>
        <label class="ls-label col-md-3" role="search">
          <input type="text" id="q" name="q" aria-label="Faça sua busca por cliente" placeholder="Nome" required="" class="ls-field">
        </label>
        <div class="ls-actions-btn ">
          <input type="submit" value="Buscar" class="ls-btn" title="Buscar">
        </div>
      </fieldset>
    </form>
  </div>
  <table class="ls-table ls-no-hover ls-table-striped ls-bg-header">
    <thead>
      <tr>
        <th>Nome</th>
        <th class="hidden-xs">Login</th>
        <th>CPF</th>
        <th class="hidden-xs">Telefone</th>
        <th>Excluir</th>
      </tr>
    </thead>
    <tbody>
      <% @porteiros.each do |porteiro| %>
        <tr>
          <td><%= link_to porteiro.nome, edit_porteiro_path(porteiro) %></td>
          <td><%= porteiro.cpf %></td>
          <td><%= porteiro.rg %></td>
          <td><%= porteiro.telefone %></td>
          <td><%= link_to 'Excluir', porteiro, method: :delete, data: { confirm: 'Confirma a exclusão ?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</main>
