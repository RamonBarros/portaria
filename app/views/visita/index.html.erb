  <%= form_tag(@visita_path, :method => 'get', id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Visita" %>
    <%= submit_tag "Buscar" %> 
  <% end %>
  <table class="ls-table ls-no-hover ls-table-striped ls-bg-header">
    <thead>
    <tr>
      <th>Visitante</th>
      <th class="hidden-xs">Entrada</th>
      <th>Saida</th>
      <th class="hidden-xs">Conjunto</th>
      <th>Excluir</th>
    </tr>
  </thead>
  <tbody>
    <% @visita.each do |visitum| %>
      <tr>
        <td><%= link_to visitum.visitante.nome, edit_visitum_path(visitum) %></td>
        <td class="hidden-xs"><%= visitum.dataEntrada %></td>
        <td><%= visitum.dataSaida %></td>
        <td class="hidden-xs"><%= visitum.conjunto %></td>
        <td><%= link_to 'Excluir', visitum, method: :delete, data: { confirm: 'Confirma a exclusão?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
