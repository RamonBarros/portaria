<main class="ls-main ">
  <div class="container-fluid">
  <h1 class="ls-title-intro ls-ico-user-add">Editar Visita</h1>
<%= form_for(@visitum) do |f| %>
  <% if @visitum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@visitum.errors.count, "error") %> prohibited this visitum from being saved:</h2>

      <ul>
      <% @visitum.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
  <label class="ls-label col-md-2">
    <%= f.label :visitante_id %>
    <%= f.text_field :visitante_id %>
  </label>
  <label class="ls-label col-md-5">
    <b class="ls-label-text">Data de Entrada</b>
    <%= f.datetime_select :dataEntrada %>
  </label>
  <label class="ls-label col-md-5">
    <b class="ls-label-text">Data de Saída</b>
    <%= f.datetime_select :dataSaida %>
  </label>
  <label class="ls-label col-md-3">
      <%= f.label :Conjunto %>
      <%= f.text_field :conjunto, :placeholder => "Conjunto e/ou número", :required => "true" %>
  </label>
  <label class="ls-label col-md-3">
    <%= f.label :Responsável %>
    <%= f.text_field :responsavel, :placeholder => "Responsável", :required => "true" %>
  </label>
  </fieldset>
  <div class="ls-actions-btn">
    <%= f.submit :Salvar, :class => 'ls-btn' %>
  </div>
<% end %>
</div>
</main>
